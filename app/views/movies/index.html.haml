-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th= link_to "Movie Title", :sort_by => "title",:id => "title_header", :class => @var
      %th Rating
      %th= link_to "Release Date", :sort_by => "release_date",:id => "release_date_header", :class => @var
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
= link_to 'Update movie', updateMovie_movies_path
= link_to 'Delete movies according to title', delTitle_movies_path
= link_to 'Delete movies according to rating', delRating_movies_path